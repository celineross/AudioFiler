<div class="container">

    <div class="row">
        <div class="col-lg-12" id="home-header">
            <h1 class="home">AudioFiler Login</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-4">
            <p class="description">
                Welcome to AudioFiler! This app is designed to store your album collection virtually for easy navigation
                and management.
                Search for an artist, and their discography will display on the screen in a list with album art, album
                name, artist name, and release year.
                You're also able to add notes, record the condition of your album, and select an option for media type,
                like vinyl or CD.
                All you need is a free user account to begin tracking your collection!
            </p>
        </div>

        <form class="col-lg-4" id="login-form">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" aria-describedby="emailHelp">
                <small id="emailHelp" class="form-text text-muted">We'll never share your information with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password">
            </div>
            <button type="submit" class="btn btn-dark" id="usersub">Submit</button>
            <p id="createAccount">No account? <a href="/register">Create one here.</a></p>
        </form>
        <div class="col-lg-2"></div>
    </div>

</div>
<script>

    $("#usersub").on("click", (event) => {
        event.preventDefault();
        let newUser = {
            email: $("#email").val().trim(),
            password: $("#password").val().trim()
        }
        $.ajax({
            type: "POST",
            url: "/api/login",
            data: newUser
        }).then((data) => {
            console.log(data)
            window.location.replace("/members");


        })

    })
</script>