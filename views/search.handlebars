{{!-- search bar
on search bring up a list of albums with art, album name, release year
on click album art 
dropdown menus for search parameters
search button
create link to route to this page if collection is empty --}}

<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand">AudioFiler</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/members">My Collection</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>

            <form class="form-inline my-2 my-lg-0" method="GET" action="/search">
                <input class="form-control mr-sm-2" name="search" placeholder="Search by Artist" aria-label="Search">
                <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>

        </div>
    </nav>

    <div class="row">
        <div class="col-lg-12" id="home-header">
            <h1 class="home">Search Results</h1>
            {{!-- this will search for keywords in your collection --}}
            <div class="input-group mb-3" id="collectionsearch">
                <div class="input-group-prepend">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon1">Search</button>
                </div>
                <input type="text" class="form-control" placeholder="" aria-label="Search submit"
                    aria-describedby="button-addon1">
            </div>
        </div>
    </div>

    <div class="collection-container ">
        {{#each albums}}
        <div class="row">
            {{!-- album art --}}
            <div class="col-md-4">
                <img style="width: 100%;" src="{{albumArt}}" alt="Album Art" class="albumArt">
            </div>
            {{!-- info --}}
            <div class="col-md-8">
                <form class="form- my-2 my-lg-0" method="POST" action="/api/albums">
                    <h2 class="artist" name="artist" rows="1">{{artist}}</h2>
                    <h4 class="albumName" name="album" rows="1">"{{albumName}}"</h4>
                    <p class="hidden" name="albumArt" rows="1">{{albumArt}}</p>
                    <h6 class="releaseYear" name="year" rows="1">{{releaseYear}}</h6>
                    <h6 class="genre" name="genre" rows="1">{{genre}}</h6>

                    <textarea class="form-control" name="notes" placeholder="notes" rows="2"></textarea>

                    {{!-- dropdown menu for condition --}}
                    <label for="mediaTypeSelect">Media Type</label>
                    <select class="form-control" id="mediaTypeSelect">
                        <option class="mediaType" name="cd">CD</option>
                        <option class="mediaType" name="cassette">Cassette</option>
                        <option class="mediaType" name="vinylSeven">7" Vinyl</option>
                        <option class="mediaType" name="vinylTwelve">12" Vinyl</option>
                        <option class="mediaType" name="eightTrack">8-track</option>
                        <option class="mediaType" name="digital">Digital</option>
                    </select>

                    <label for="conditionSelect">Condition</label>
                    <select class="form-control" id="conditionSelect">
                        <option class="condition" name="condition">Mint</option>
                        <option class="condition" name="condition">Near Mint</option>
                        <option class="condition" name="condition">Very Good</option>
                        <option class="condition" name="condition">Fair</option>
                        <option class="condition" name="condition">Poor</option>
                    </select>

                    <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Add</button>
                </form>

            </div>
        </div>

        {{/each}}
    </div>

</div>