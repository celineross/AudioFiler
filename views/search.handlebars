{{!-- search bar
on search bring up a list of albums with art, album name, release year
on click album art 
dropdown menus for search parameters
search button
create link to route to this page if collection is empty --}}

<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand">AudioFiler</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/members">Results</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>

            <form class="form-inline my-2 my-lg-0" method="GET" action="/search">
                <input class="form-control mr-sm-2" name="search" placeholder="Search by Artist" aria-label="Search">
                <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>

        </div>
    </nav>

    <div class="row">
        <div class="col-lg-12" id="home-header">
            <h1 class="home">My Collection</h1>
            {{!-- this will search for keywords in your collection --}}
            <div class="input-group mb-3" id="collectionsearch">
                <div class="input-group-prepend">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon1">Search</button>
                </div>
                <input type="text" class="form-control" placeholder="" aria-label="Search submit"
                    aria-describedby="button-addon1">
            </div>
        </div>
    </div>

    <div class="collection-container ">
        {{#each albums}}
        <div class="row">
            {{!-- album art --}}
            <div class="col-md-4">
                <img style="width: 100%;" src="{{albumArt}}" alt="Album Art" class="albumArt">
            </div>
            {{!-- info --}}
            <div class="col-md-8">
                <form class="form- my-2 my-lg-0" method="POST" action="/api/albums">
                    <h2 class="artist" name="artist" rows="1">{{artist}}</h2>
                    <h4 class="albumName" name="album" rows="1">"{{albumName}}"</h4>
                    <p class="hidden" name="albumArt" rows="1">{{albumArt}}</p>
                    <h6 class="releaseYear" name="year" rows="1">{{releaseYear}}</h6>
                    <h6 class="genre" name="genre" rows="1">{{genre}}</h6>

                    {{!-- dropdown menu for media types --}}
                    <textarea class="form-control" name="notes" placeholder="notes" rows="2"></textarea>

                    {{!-- dropdown menu for condition --}}
                    <div class="dropdown">
                        <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Condition
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" name="condition" href="#">Mint</a>
                            <a class="dropdown-item" name="condition" href="#">Near Mint</a>
                            <a class="dropdown-item" name="condition" href="#">Very Good</a>
                            <a class="dropdown-item" name="condition" href="#">Good</a>
                            <a class="dropdown-item" name="condition" href="#">Fair</a>
                            <a class="dropdown-item" name="condition" href="#">Poor</a>
                        </div>
                    </div>

                    <div class="dropdown">
                        <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Media Type
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" name="cd" href="#">CD</a>
                            <a class="dropdown-item" name="cassette" href="#">Cassette</a>
                            <a class="dropdown-item" name="vinylSeven" href="#">7" Record</a>
                            <a class="dropdown-item" name="vinylTwelve" href="#">12" Record</a>
                            <a class="dropdown-item" name="eightTrack" href="#">8-track</a>
                            <a class="dropdown-item" name="digital" href="#">Digital</a>
                        </div>
                    </div>

                    <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Add</button>
                </form>

            </div>
        </div>

        {{/each}}
    </div>

</div>