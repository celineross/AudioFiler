<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand">AudioFiler</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/members">My Collection</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>

            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search by Artist" aria-label="Search">
                <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>

        </div>
    </nav>

    <div class="row">
        <div class="col-lg-12" id="home-header">
            <h1 class="home">My Collection</h1>
            {{!-- this will search for keywords in your collection --}}
            <div class="input-group mb-3" id="collectionsearch">
                <div class="input-group-prepend">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon1">Search</button>
                </div>
                <input type="text" class="form-control" placeholder="" aria-label="Search submit"
                    aria-describedby="button-addon1">
            </div>
        </div>
    </div>
    <div class="collection-container">
        {{#each albumArt}}
        <section id="cover">
            <img src="{{this.albumArt}}" alt="Album Art" class="albumArt">
        </section>
        {{/each}}

        <section id="generalInfo">
            <ul>
                {{#each info}}
                <li>

                    <p><span class="label">Artist:</span> {{this.artist}}</p>
                    <p><span class="label">Album:</span> {{this.albumName}}</p>
                    <p><span class="label">Genre:</span> {{this.genre}}</p>
                    <p><span class="label">Year:</span> {{this.releaseYear}}</p>

                </li>
                {{/each}}
            </ul>
        </section>

        <section id="moreInfo">
            {{!-- condition, price and additional notes go here --}}
            <ul>
                {{#each moreInfo}}
                <li>
                    {{!-- change to dropdown menu --}}
                    <p><span class="label">Media Type:</span> {{this.media}}</p>
                    <p><span class="label">Condition:</span> {{this.condition}}</p>
                    {{!-- change to a check box or icon --}}
                    <p><span class="label">Favorite:</span> {{this.favorite}}</p>
                    <p><span class="label">Notes:</span> {{this.notes}}</p>

                    <button data-id="{{this.id}}" class="delalbum">Delete</button>

                </li>
                {{/each}}
            </ul>
        </section>
    </div>
</div>