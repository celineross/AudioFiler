<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="register-header">Register</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4"></div>
        <form class="col-lg-4" id="login-form">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="username" class="form-control" id="username" aria-describedby="usernameHelp">
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" aria-describedby="emailHelp">
                <small id="emailHelp" class="form-text text-muted">We'll never share your information with
                    anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password">
            </div>
            <button type="submit" class="btn btn-dark" id="usersub">Submit</button>
            <p id="loginlink"><a href="/">Login here.</a></p>
        </form>
        <div class="col-lg-4"></div>
    </div>

</div>
<script>
    $("#usersub").on("click", () => {

        let newuser = {
            username: $("#username").val().trim(),
            email: $("#email").val().trim(),
            password: $("#password").val().trim()
        }
        $.ajax({
            type: "POST",
            url: "/api/register",
            data: newuser
        }).then((data) => {
            alert("posted new user")
        })

    })
</script>