<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="home">Register</h1>
        </div>
    </div>

    <form class="col-lg-4">
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp">
            <small id="emailHelp" class="form-text text-muted">We'll never share your information with anyone
                else.</small>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password">
        </div>
        <button type="submit" class="btn btn-dark" id="usersub">Submit</button>
        <a href="/login">Login</a>
    </form>


</div>
<script>
    $("#usersub").on("click", (event)=> {
        event.preventDefault();
        let newuser = {
            firstName: "alex",
            lastName: "will",
            email: $("#email").val().trim(),
            password: $("#password").val().trim()
        }
        $.ajax({
          type: "POST",
          url: "/api/register",
          data: newuser  
        }).then((data)=>{
            window.location.replace("/login")
        })
        
    })
</script>